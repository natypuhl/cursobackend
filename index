<?php
// Asignar un valor a la variable "n"
$n = 10;

// Validar si "n" es un número positivo
if ($n > 0) {
    echo "El número ingresado es un número positivo";
}
echo "<br>";
// Asignar un valor a la variable "n"
$n = 5;

// Validar si "n" está en el rango deseado
if ($n > 1 && $n < 10) {
  echo "El número ingresado es mayor a 1 y menor a 10";
}
echo "<br>"
// Asignar un valor a la variable "n"
$N = 5;
// Validar si "n" cumple alguna de las dos condiciones
if ($N >= 10 || $N < 2) {
    echo "El número ingresado es mayor o igual a 10 o menor a 2";
} else {
    echo "El número ingresado no pudo ser validado";
}
echo "<br>"
// Asignar valores a las variables "numero1" y "numero2"
$numero1 = 10;
$numero2 = 5;

// Comprobar si numero1 es mayor que numero2
if ($numero1 > $numero2) {
    // Si numero1 es mayor, imprimir la suma y la resta
    $suma = $numero1 + $numero2;
    $resta = $numero1 - $numero2;

    echo "La suma de numero1 y numero2 es: $suma<br>";
    echo "La resta de numero1 y numero2 es: $resta";
} elseif ($numero2 > $numero1) {
    // Si numero2 es mayor, imprimir la multiplicación, la división entera y el resto
    $multiplicacion = $numero1 * $numero2;
    $divisionEntera = intdiv($numero1, $numero2);
    $resto = $numero1 % $numero2;

    echo "La multiplicación de numero1 y numero2 es: $multiplicacion<br>";
    echo "La división entera de numero1 entre numero2 es: $divisionEntera<br>";
    echo "El resto de la división de numero1 entre numero2 es: $resto";
} else {
    // Si son iguales, imprimir un mensaje
    echo "Los números ingresados son iguales";
}


?>
